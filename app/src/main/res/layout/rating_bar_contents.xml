<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rater="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="36dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:background="@color/blackOverlay"
    android:id="@+id/RatingBarLayout"
    android:gravity="center">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My product name is ..."
        android:id="@+id/productName"
        android:textSize="20sp"
        android:layout_weight="1"
        android:textColor="#ffffffff"
        android:maxLines="1"/>

    <app.subversive.groceryratings.UI.Rater
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productStars"
        rater:radius="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

    <TextView
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:text="(99+)"
        android:id="@+id/productNumReviews"
        android:textSize="14sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        />

</LinearLayout>